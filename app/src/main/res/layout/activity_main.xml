<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaczorov.sharenotesapp.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Połącz"
        android:id="@+id/buttonLink"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="71dp"
        android:onClick="buttonLinkClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyślij notatki"
        android:id="@+id/buttonPost"
        android:layout_below="@+id/buttonLink"
        android:layout_alignEnd="@+id/buttonLink"
        android:onClick="buttonPostClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szukaj notatek"
        android:id="@+id/buttonSearch"
        android:onClick="buttonSearchClick"
        android:layout_below="@+id/buttonPost"
        android:layout_alignEnd="@+id/buttonPost" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twoje notatki"
        android:id="@+id/buttonOpen"
        android:layout_below="@+id/buttonSearch"
        android:layout_alignEnd="@+id/buttonSearch"
        android:onClick="buttonOpenClick" />
</RelativeLayout>
