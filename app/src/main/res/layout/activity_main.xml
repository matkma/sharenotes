<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaczorov.sharenotesapp.MainActivity"
    android:background="#fffaeb">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WyÅ›lij notatki"
        android:id="@+id/buttonPost"
        android:onClick="buttonPostClick"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szukaj"
        android:id="@+id/buttonSearch"
        android:onClick="buttonSearchClick"
        android:layout_below="@+id/buttonPost"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twoje notatki"
        android:id="@+id/buttonOpen"
        android:onClick="buttonOpenClick"
        android:layout_below="@+id/buttonSearch"
        android:layout_alignStart="@+id/buttonPost" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kochanska Paula, Kmak Mateusz, 2016"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ShareNotes"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
